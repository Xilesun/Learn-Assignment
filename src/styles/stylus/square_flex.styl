/* variables and functions */
mq-desktop = 'only screen and (min-width: 768px)'
mq-tablet = '(min-width: 361px) and (max-width: 767px)'
mq-mobile = '(max-width: 360px)'

  
section
  max-width: 1280px
  width: 90%
  margin: auto
  text-align: left
  display: flex
  flex-wrap: wrap
  div
    border: 1px dotted #000
    text-align: center
    height: auto
    margin: 5px
    padding: 20px
    @media mq-desktop
      width: calc(33.33% - 10px)
    @media mq-tablet
      width: calc(50% - 10px)
    @media mq-mobile
      width: 100%