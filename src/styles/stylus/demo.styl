$width = 1140

header
  margin: 50px auto
  text-align: center
  max-width: 500px
  width: 90%
  h1
    font-size: 30px

section
  max-width: $width px
  width: 90%
  margin: 30px auto
  color: #fff
  padding: 0px
  display: table
  div 
    text-align: center
    height: auto
    display: table-cell
    padding: 42px 0
section:nth-of-type(1)
  background-color: #42cafd
  div
    display: table
    padding: 0
    border-spacing: 30px 15px
    width: calc(100% + 60px)
    margin-left: -30px
    div
      padding: 42px 0
      display: table-cell
      background-color: #22c1fd
      width: 25%
section:nth-of-type(2)
  background-color: #66b3ba
  padding: 15px 0
  div:nth-child(2)
    opacity: 0
  div 
    background-color: #52a9b1
section:nth-of-type(3)
  background-color: #8eb19d
  div
    border-spacing: 30px 15px
    display: table
    padding: 0
    width: calc(100% + 60px)
    margin-left: -30px
    div
      padding: 42px
      display: table-cell
      background-color: #7ba48d
      width: ($width/3)px 
    div:nth-child(3)
      padding: 0
      border-spacing: 0 
      display: table-cell
      div
        display: table-cell
        background-color: #68977c
        padding: 42px 0
      div:nth-child(2)
        opacity: 0
section:nth-of-type(4)
  background-color: #f0d2d1
  padding: 100px 0
  div:nth-child(1), div:nth-child(3)
    opacity: 0
  div
    margin: auto
    background-color: #e5b1af
section:nth-of-type(5)
  background-color: #f19a3e
  div
    display: table
    padding: 0
    width: 100%
    border-spacing: 30px 15px
    width: calc(100% + 60px)
    margin-left: -15px
    div
      display: table-cell
      padding: 0px
      height: auto
      width: 25%
      div
        background-color: #ef8b22     
        padding: 20px
        line-height: 25px
        font-family: sans-serif
        width: 100%
        display: table
        font-size: 18px
        height: auto
section:nth-of-type(6)
  background-color: #1e90ff;
  div
    display: table
    background-color: #0182ff
    width: 100%
    padding: 72px 0
    margin-bottom: 50px
  div:nth-child(3)
    margin-bottom: 0
section:nth-of-type(7)
  background-color: #ff6347
  div
    padding: 0
    width: 100%
    display: table
    border-spacing: 30px 15px
    width: calc(100% + 60px)
    margin-left: -30px
    div
      display: table-cell
      width: auto
      padding: 30px
      background-color: #ff4726
   div:first-child
   	  margin-top: -15px
   div:last-child
   	  margin-bottom: -15px
section:nth-of-type(8)
  background-color: #00ff7f
  div   
    display: table
    padding: 0
    width: calc(100% + 60px)
    border-spacing: 30px 15px
    margin-left: -30px
    div
      padding: 42px
      display: table-cell
      background-color: #00e672
    div:first-child
      width: 31.7%
section:nth-of-type(9)
  background-color: #5f9ea0
  div   
    display: table
    padding: 0
    width: calc(100% + 60px)
    border-spacing: 30px 15px
    margin-left: -30px
    div
      background-color: #568e90
      padding: 42px
      display: table-cell
.hide
  opacity: 0