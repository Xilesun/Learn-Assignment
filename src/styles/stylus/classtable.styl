.contanter
  width: 800px;
  margin: auto;
.table
  display: flex;
  &>div
    text-align: center;
    width: 20%;
    &>div
      height: 100px;
      padding: 20px 20px;
      border: 1px solid #eee;
      line-height: 18px;
      span
        &:nth-of-type(3)
          font-size: 13px;
      &:nth-of-type(1)
        background-color: #aaa;
        height: 75px;
.row
  flex-wrap: wrap;
  &>div
  	display: flex;
  	width: 100%;
  	&>div
  	  width: 20%;
    &>div:nth-of-type(1)
      padding: 40px;
      height: 100px;