/* variables and functions */
mq-desktop = 'only screen and (min-width: 769px)'
mq-tablet = '(min-width: 421px) and (max-width: 768px)'
mq-mobile = '(max-width: 420px)'
header
  margin: 50px auto
  text-align: center
  max-width: 500px
  h1
    font-size: 30px
section
  overflow: hidden
  zoom: 1
  max-width: 1140px
  width: 90%
  margin: 50px auto
  text-align: center
  clear: both
  div
    float: left
    border: 1px dotted #000
    padding: 20px
    margin: 15px 0
    &:nth-child(1)
      padding: 0
    &:nth-child(1), &:nth-child(4), &:nth-child(6)
      float: right
    &:nth-child(5)
      border: none
      padding: 0
      margin: 0
      &>div
        float: left  
        padding: 20px
    @media mq-desktop
      width: 31%
      &:nth-child(5)
        clear: left
        width: calc(65.4%)
        &>div
          width: calc(47.5%)
          &:first-child
            margin-right: 5%
          &:last-child
            margin-right: 0
    @media mq-tablet
      width: 47%
      &:nth-child(6)
        float: right
      &:nth-child(4)
        clear: both
      &:nth-child(5)
        margin-right: 6%
        &>div
          width: 100%
    @media mq-mobile
      width: 100%
      &>div
        clear: both
.float-advanced
  >div  
    @media mq-desktop
      &:nth-child(3)
        margin-left: 3.4%
    @media mq-tablet
      &:nth-child(6), &:nth-child(3)
        float: right
.float_2
  >div 
    @media mq-desktop
      &:nth-child(2)
        transform: translateX(100%+11px)
      &:nth-child(3)
        transform: translateX(-(99.8%))
    @media mq-tablet
      &:nth-child(2)
        float: right
        clear: both
      &:nth-child(3)
        margin-top: -33px