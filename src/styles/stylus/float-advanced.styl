/* variables and functions */
mq-desktop = 'only screen and (min-width: 769px)'
mq-tablet = '(min-width: 421px) and (max-width: 768px)'
mq-mobile = '(max-width: 420px)'

header
  margin: 50px auto
  text-align: center
  max-width: 500px
  width: 90%
  h1
    font-size: 30px
    
.float-advanced
  max-width: 1140px
  width: 90%
  margin: auto
  text-align: center
  div
    float: left
    border: 1px dotted #000
    padding: 20px
    &:nth-child(1)
      padding: 0
    &:nth-child(5)
      border: none
      padding: 0      
      float: left
      margin: 0
      &>div
        float: left  
        padding: 20px
    @media mq-desktop
      width: 31%
      &:nth-child(2)
      &:nth-child(3)
      &:nth-child(6)
        float: left
      &:nth-child(1)
      &:nth-child(4)
        float: right
      &:nth-child(2)
        margin-right: 1.7%
        margin-bottom: 15px
      &:nth-child(3)
        margin-left: 1.7%
        margin-bottom: 15px
      &:nth-child(5)
        margin-top: 15px
        margin-right: 1.7%
        width: calc(65.4%)
        &>div
          width: calc(47.5%)
          &:first-child
            margin-right: 2.5%
          &:last-child
            margin-left: 2.5%
            margin-right: 0
      &:nth-child(1)
        margin-bottom: 15px
      &:nth-child(4)
        margin: 15px 0
      &:nth-child(6)
        margin-top: 15px
        margin-left: 1.7%
    @media mq-tablet
      width: 47%
      margin: 15px 0
      &:nth-child(1)
      &:nth-child(3)
      &:nth-child(4)
      &:nth-child(6)
        float: right
      &:nth-child(2)
        float: left
      &:nth-child(4)
        clear: both
      &:nth-child(5)
        margin-right: 6%
        &>div
          width: 100%
    @media mq-mobile
      width: 100%
      margin: 15px 0
    
    

        
      