/* variables and functions */
mq-desktop = 'only screen and (min-width: 768px)'
mq-tablet = '(min-width: 361px) and (max-width: 767px)'
mq-mobile = '(max-width: 360px)'

  
section
  max-width: 1280px
  width: 90%
  margin: auto
  text-align: left
  display: table
  border-spacing: 10px
  div
    display: table-row
    div
      display: table-cell
      border: 1px dotted #000
      text-align: center
      height: auto
      padding: 20px
      @media mq-desktop
        width: 33.33%
      @media mq-tablet
        width: 50%
      @media mq-mobile
        width: 100%